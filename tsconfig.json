{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "components/Loader/index.tsx",
    "components/AirQuality.jsx",
    "components/Overview.jsx",
    "utils/fetchWeather.jsx",
    "utils/fetchGeo.jsx",
    "utils/fetchAir.jsx",
    "utils/ChartInit.jsx",
    "sample/cityData.jsx",
    "sample/airData.js",
    "lib/OpenWeather.jsx",
    "components/WeatherInfo.jsx",
    "components/TodayForecast.jsx",
    "components/SunPosition.jsx",
    "components/SearchBar.jsx",
    "components/Map.jsx",
    "components/LocalDate.jsx",
    "components/Footer.jsx",
    "components/DailyForecast.jsx",
    "components/BarChart.jsx"
  ],
  "exclude": ["node_modules"]
}
